# 3
menu-3-0 = "  "
menu-3-0-exec = Telegram &
menu-3-1 = "  "
menu-3-1-exec = pycharm &
menu-3-2 = "  "
menu-3-2-exec = wireshark &
menu-3-3 = " "
menu-3-3-exec = sh $HOME/.config/polybar/scripts/Dzen2Info.sh &
